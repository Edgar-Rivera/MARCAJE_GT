
@{
    ViewBag.Title = "Solicitud Creada Con Exito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="our-skills">
        <div class="card" style="border:none !important">
            <div class="box-shadow">
                <h5 class="text-center">La soliciud <strong> @ViewBag.activity </strong> se ha creado con éxito!</h5>
                <hr />
                <br />
                <div class="form-row">
                    <div class="col-sm-12">
                        <p> <label>Se ha enviado una notificacion por correo electronico a: <strong> @ViewBag.email_to </strong> </label> <br /></p>
                        <p> <label>Una copia del correo electrónico para seguimeinto fue recibida por: <strong> @ViewBag.email_bcc </strong> </label> <br /></p>
                        <p> Puedes dar seguimiento a tu solictud en el siguiente enlace </p>
                        @Html.ActionLink("Ir a mis Solicitudes", "RequestInvoice", "Account", "", new { @class = "btn btn-second" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

