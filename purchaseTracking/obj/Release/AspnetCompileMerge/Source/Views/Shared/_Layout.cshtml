<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/Content/Chosen/component-chosen.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
</head>


<body style="zoom:90%!important">

    <style>
        body, html {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        html {
            font-size: 14px !important;
        }
    </style>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid d-flex align-items-center">
                <a class="navbar-brand" href="@Url.Action("page", "Home")">
                    <img src="~/Content/Images/logo_verde.svg" width="150" height="40" alt="isericon" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Menú principal a la izquierda -->
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("PersonalInformation", "Account")">Mi Información</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RequestForms", "Account")">Solicitudes Digitales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Policies", "Account")">Políticas Internas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DigitalForms", "Account")">Formularios Digitales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CorporateTemplate", "Account")">Plantillas Corporativas</a>
                        </li>
                        @if (Session["code"].ToString() == "36" || Session["code"].ToString() == "233" || Session["code"].ToString() == "311"
             || Session["code"].ToString() == "167" || Session["code"].ToString() == "265" || Session["code"].ToString() == "281" || Session["code"].ToString() == "182" || Session["code"].ToString() == "95"
             || Session["code"].ToString() == "204" || Session["code"].ToString() == "40" || Session["code"].ToString() == "340" || Session["code"].ToString() == "8" || Session["code"].ToString() == "1"
             || Session["code"].ToString() == "300" || Session["code"].ToString() == "201" || Session["code"].ToString() == "13" || Session["code"].ToString() == "89" || Session["code"].ToString() == "150" || Session["code"].ToString() == "320" || Session["code"].ToString() == "298")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("EmpleadosUnidad", "Account")">Empleados Unidad</a>
                            </li>
                        }

                        @if (Session["code"].ToString() == "4" || Session["code"].ToString() == "6" || Session["code"].ToString() == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("EmpleadosAll", "Account")">Empleados Resumen</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Cerrar Sesión", "logoutSession", "Login", null, new { @class = "nav-link text-dark fw-bold" })
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Isertec - IserAccess
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>