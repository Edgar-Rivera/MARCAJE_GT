@{
    string pidForm1 = "";
    string pidForm2 = "";
    string pidFormD = "";
    string pidFormD1 = "";
    pidForm1 = data.ORDEN != "" || data.CODIGO == 0 ? "active" : "";
    pidForm2 = data.ORDEN == "" ? "active" : "";
