
@{
    ViewBag.Title = "Solicitudes Digitales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a[href] {
        color: black !important;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0px solid rgba(0, 0, 0, 0);
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .bg-gradient-scooter {
        background: #17ead9;
    }

    .widgets-icons-2 {
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #ededed;
        font-size: 27px;
        border-radius: 10px;
    }

    .rounded-circle {
        border-radius: 50% !important;
    }

    .text-white {
        color: #fff !important;
    }

    .ms-auto {
        margin-left: auto !important;
    }

    .bg-gradient-bloody {
        background: #f54ea2;
    }

    .bg-gradient-ohhappiness {
        background: #00b09b;
    }

    .bg-gradient-blooker {
        background: #ffdf40;
    }

    thead tr th {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #292b2c;
    }

    .table-responsive {
        height: 200px;
        overflow: scroll;
    }
</style>
@{
    string temp_body_j = string.Empty;
    if (Session["code"].ToString() == "36" || Session["code"].ToString() == "5" || Session["code"].ToString() == "4" || Session["code"].ToString() == "233" || Session["code"].ToString() == "311"
                        || Session["code"].ToString() == "167" || Session["code"].ToString() == "265" || Session["code"].ToString() == "281" || Session["code"].ToString() == "182" || Session["code"].ToString() == "95"
                        || Session["code"].ToString() == "204" || Session["code"].ToString() == "40" || Session["code"].ToString() == "340" || Session["code"].ToString() == "8" || Session["code"].ToString() == "1"
                        || Session["code"].ToString() == "300" || Session["code"].ToString() == "201" || Session["code"].ToString() == "270" || Session["code"].ToString() == "13" || Session["code"].ToString() == "89"
                        || Session["code"].ToString() == "150" || Session["code"].ToString() == "276" || Session["code"].ToString() == "320" || Session["code"].ToString() == "200" || Session["code"].ToString() == "5"
                        || Session["code"].ToString() == "298" || Session["code"].ToString() == "263" || Session["code"].ToString() == "432"
                        )
    {
        temp_body_j = "block";
    }
    else
    {
        temp_body_j = "none";
    }
}



@{
    string temp_body = string.Empty;
    if (Session["code"].ToString() == "6" || Session["code"].ToString() == "4" || Session["code"].ToString() == "5" || Session["code"].ToString() == "1")
    {
        temp_body = "block";
    }
    else
    {
        temp_body = "none";
    }
}
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-md-11 mt-3">
            @if (string.IsNullOrEmpty(ViewBag.source))
            {
                <div class="alert alert-danger" role="alert">
                    <b> No se encuentra una firma registrada!, por favor cree su firma Digital en la opción "Firma Digital de Empleado" </b>
                </div>
            }

            <div style="display:@temp_body" class="mb-3">
                <h4>Control y Gestión de Nómina</h4>
                <hr />
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 mb-2">
                    <div class="col">
                        <a href="@Url.Action("listNomina", "Account")" class="text-decoration-none">
                            <div class="card radius-10 border-start border-0 border-3 border-info h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between flex-nowrap">
                                        <div class="me-2">
                                            <h5 class="mb-1 text-dark">Solicitudes de Vacaciones</h5>
                                            <p class="mb-0 text-muted small">Solicitudes realizadas por empleados</p>
                                        </div>
                                        <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center"
                                             style="min-width: 60px; height: 60px;">
                                            <i class="fas fa-users fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <h4>Formularios de Solicitud</h4>
            <hr />
            <div class="row row-cols-1 row-cols-md-3 row-cols-xl-4 mb-3">
                @if (!string.IsNullOrEmpty(ViewBag.source))
                {
                    if (Session["code"].ToString() != "265" && Session["code"].ToString() != "311" && Session["code"].ToString() != "182")
                    {
                        <div class="col">
                            <a href="@Url.Action("VacationsRequest", "Account")" class="text-decoration-none">
                                <div class="card radius-10 border-start border-0 border-3 border-info h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center justify-content-between flex-nowrap">
                                            <div class="me-2">
                                                <h5 class="mb-1 text-dark">Crear Solicitud de Vacaciones / Permiso</h5>
                                                <p class="mb-0 text-muted small">Nueva Solicitud digital</p>
                                            </div>
                                            <div class="rounded-circle bg-success text-white d-flex justify-content-center align-items-center"
                                                 style="min-width: 60px; height: 60px;">
                                                <i class="fas fa-calendar fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            <h4>Mis Solicitudes / Firma Digital</h4>
            <hr />
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3 mb-3">
                <div class="col">
                    <a href="@Url.Action("RequestList", "Account")" class="text-decoration-none">
                        <div class="card radius-10 border-start border-0 border-3 border-info h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between flex-nowrap">
                                    <div class="me-2">
                                        <h5 class="mb-1 text-dark">Mis solicitudes Creadas</h5>
                                        <p class="mb-0 text-muted small">Gestione y controle el estado de sus solicitudes realizadas</p>
                                    </div>
                                    <div class="rounded-circle bg-warning text-white d-flex justify-content-center align-items-center"
                                         style="min-width: 60px; height: 60px;">
                                        <i class="fas fa-share fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="@Url.Action("createSignDigital", "Account")" class="text-decoration-none">
                        <div class="card radius-10 border-start border-0 border-3 border-info h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between flex-nowrap">
                                    <div class="me-2">
                                        <h5 class="mb-1 text-dark">Firma Digital de Empleado</h5>
                                        <p class="mb-0 text-muted small">Creación de Firma digital para solicitudes</p>
                                    </div>
                                    <div class="rounded-circle bg-info text-white d-flex justify-content-center align-items-center"
                                         style="min-width: 60px; height: 60px;">
                                        <i class="fas fa-signature fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="@Url.Action("MailSign", "Account")" class="text-decoration-none">
                        <div class="card radius-10 border-start border-0 border-3 border-info h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between flex-nowrap">
                                    <div class="me-2">
                                        <h5 class="mb-1 text-dark">Firma de Correo Electrónico</h5>
                                        <p class="mb-0 text-muted small">Creación de Firma de tu correo electrónico</p>
                                    </div>
                                    <div class="rounded-circle bg-success text-white d-flex justify-content-center align-items-center"
                                         style="min-width: 60px; height: 60px;">
                                        <i class="fas fa-envelope fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

            </div>
            <div style="display:@temp_body_j">
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3">
                    <div class="col">
                        <a href="@Url.Action("listRequest", "Account")" class="text-decoration-none">
                            <div class="card radius-10 border-start border-0 border-3 border-info h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between flex-nowrap">
                                        <div class="me-2">
                                            <h5 class="mb-1 text-dark">Solicitudes Asignadas</h5>
                                            <p class="mb-0 text-muted small">Apruebe o desapruebe las solicitudes de sus empleados</p>
                                        </div>
                                        <div class="rounded-circle bg-danger text-white d-flex justify-content-center align-items-center"
                                             style="min-width: 60px; height: 60px;">
                                            <i class="fas fa-check-circle fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>


