
@{
    ViewBag.Title = "Costeo de Proyectos - Ordenes de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using purchaseTracking.Models.Project

@{
    // GLOBAL VARIABLES FOR VISUAL CONCEPTS
    double total_ordr_ml = 0;
    double total_ordr_me = 0;
    string prjCode = string.Empty;

}
<script>
    function ordr_cur() {
        var x = document.getElementById("ordr_me");
        var y = document.getElementById("ordr_ml");
        x.style.display = "none";
        y.style.display = "block";
    }
    function ordr_cur_me() {
        var x = document.getElementById("ordr_me");
        var y = document.getElementById("ordr_ml");
        x.style.display = "block";
        y.style.display = "none";
    }
</script>
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-md-11">
            <h4>Órdenes de Venta - Costeo Proyecto -  @ViewBag.Project </h4>
            <hr />
                <div class="btn-group float-lg-right" role="group" aria-label="Basic example">
                    <button type="button" onclick="ordr_cur()" class="btn btn-success">QTZ</button>
                    <button type="button" onclick="ordr_cur_me()" class="btn btn-primary">USD</button>
                </div>
            <br />
            <br />
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center"># Orden de Venta</th>
                        <th scope="col"># Socio de Negocio</th>
                        <th scope="col">Fecha Orden de Venta</th>
                        <th scope="col">Total QTZ</th>
                        <th scope="col">Total USD</th>
                        <th scope="col">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SalesOrders item in ViewBag.ordr)
                    {
                        <tr>
                            <td class="text-center">@item.DocNum</td>
                            <td>@item.CardName</td>
                            <td>@item.FechaOrden</td>
                            <td class="text-right">@string.Format("Q {0:#,##0.#0}", item.QTZ)</td>
                            <td class="text-right">@string.Format("$ {0:#,##0.#0}", item.USD)</td>
                            <td class="text-center">@item.CANCELED</td>
                        </tr>
                        total_ordr_me = total_ordr_me + item.USD;
                        total_ordr_ml = total_ordr_ml + item.QTZ;
                    }
                </tbody>
            </table>


        </div>
</div>
</div>







