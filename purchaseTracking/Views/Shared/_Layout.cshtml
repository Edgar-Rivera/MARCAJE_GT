<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <link href="~/Content/Chosen/component-chosen.min.css" rel="stylesheet" />
</head>
<body>
    <script>
        $(document).ready(function () {
            $(".dropdown-toggle").dropdown();
        });
    </script>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="navbar-brand">
                <a href="@Url.Action("page", "Home")">
                    <img src="~/Content/Images/iserlogo.png" width="150" height="40" alt="isericon" />
                </a>
            </div>
            @if (Session["code"].ToString() == "1" || Session["code"].ToString() == "6" || Session["code"].ToString() == "5" || Session["code"].ToString() == "4")
            {
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("PersonalInformation", "Account")">Mi Información <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RequestForms", "Account")">Solicitudes Digitales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RequestForms", "Account")">Políticas internas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Empleados Unidad</a>
                        </li>
                    </ul>
                </div>
            }

            <div class="ml-auto">
                <a>@Html.ActionLink("Cerrar Sesión", "logoutSession", "Login", null, new { @class = "nav-link text-right" })</a>
            </div>

        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Isertec - EasyAccess
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/Chosen/chosen.jquery.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>









