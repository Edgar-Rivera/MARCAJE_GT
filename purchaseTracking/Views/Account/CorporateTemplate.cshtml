    }


    .card-formulario {
        background-color: #E9ECEF;
        border-radius: 12px;
        padding: 25px;
        text-align: center;
        transition: 0.25s ease;
        color: #212529 !important;
        font-weight: 600;
    }


        .card-formulario a {
            color: black;
            text-decoration: none;
            font-weight: 600;
        }

