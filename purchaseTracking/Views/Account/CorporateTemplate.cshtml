            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
        }

        .card-formulario .card-body {
            position: relative;
        }
    .card-destacada > div:not(.icono-doc) {
        color: #1E2329;
    }

    .icono-doc {
        font-size: 32px;
        color:  black;
    }
    .icono-container {
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

    .icono-doc {
        font-size: 32px !important;
        line-height: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: #000000;
    }

    .link-card {
        display: block;
        height: 100%;
        text-decoration: none;
        color: inherit;
    }

    .titulo-formulario {
        color: #000000 !important;
        font-weight: 700;
        font-size: 1.1rem;
    }
</style>

