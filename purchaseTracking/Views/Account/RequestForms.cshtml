
@{
    ViewBag.Title = "Solicitudes Digitales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a[href] {
        color: black !important;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0px solid rgba(0, 0, 0, 0);
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .bg-gradient-scooter {
        background: #17ead9;
    }

    .widgets-icons-2 {
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #ededed;
        font-size: 27px;
        border-radius: 10px;
    }

    .rounded-circle {
        border-radius: 50% !important;
    }

    .text-white {
        color: #fff !important;
    }

    .ms-auto {
        margin-left: auto !important;
    }

    .bg-gradient-bloody {
        background: #f54ea2;
    }

    .bg-gradient-ohhappiness {
        background: #00b09b;
    }

    .bg-gradient-blooker {
        background: #ffdf40;
    }

    thead tr th {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #292b2c;
    }

    .table-responsive {
        height: 200px;
        overflow: scroll;
    }
</style>
@{
    string temp_body_j = string.Empty;
    if (Session["code"].ToString() == "36" || Session["code"].ToString() == "5" || Session["code"].ToString() == "4" || Session["code"].ToString() == "233" || Session["code"].ToString() == "311"
                        || Session["code"].ToString() == "167" || Session["code"].ToString() == "265" || Session["code"].ToString() == "281" || Session["code"].ToString() == "182" || Session["code"].ToString() == "95"
                        || Session["code"].ToString() == "204" || Session["code"].ToString() == "40" || Session["code"].ToString() == "340" || Session["code"].ToString() == "8" || Session["code"].ToString() == "1"
                        || Session["code"].ToString() == "300" || Session["code"].ToString() == "201" || Session["code"].ToString() == "270" || Session["code"].ToString() == "13" || Session["code"].ToString() == "89" 
                        || Session["code"].ToString() == "150" || Session["code"].ToString() == "276" || Session["code"].ToString() == "320" || Session["code"].ToString() == "200"|| Session["code"].ToString() == "5"
                        || Session["code"].ToString() == "298" 
                        )
    {
        temp_body_j = "block";
    }
    else
    {
        temp_body_j = "none";
    }
}



@{
    string temp_body = string.Empty;
    if (Session["code"].ToString() == "6" || Session["code"].ToString() == "4" || Session["code"].ToString() == "5" || Session["code"].ToString() == "1")
    {
        temp_body = "block";
    }
    else
    {
        temp_body = "none";
    }
}
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-md-11">
            @if (string.IsNullOrEmpty(ViewBag.source))
            {
                <div class="alert alert-danger" role="alert">
                    <b> No se encuentra una firma registrada!, por favor cree su firma Digital en la opción "Firma Digital de Empleado" </b>
                </div>
            }

            <div style="display:@temp_body" class="mb-3">
                <h4>Control y Gestión de Nómina</h4>
                <hr />
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">
                    <a href="@Url.Action("listNomina", "Account")">

                        <div class="col">
                            <div class="card radius-10 border-start border-0 border-3 border-info">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h5 class="mb-0">Solicitudes de Vacaciones</h5>
                                            <p class="mb-0 font-13">Solicitudes realizadas por empleados&nbsp;</p>
                                        </div>
                                        <div class="widgets-icons-2 rounded-circle bg-primary text-white ms-auto">
                                            <i class="fas fa-users"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <h4>Formularios de Solicitud</h4>
            <hr />
            
            <div class="row row-cols-1 row-cols-md-3 row-cols-xl-4">
                @if (!string.IsNullOrEmpty(ViewBag.source))
                {
                    if (Session["code"].ToString() != "265" && Session["code"].ToString() != "311" && Session["code"].ToString() != "182" )
                    {
                    <a href="@Url.Action("VacationsRequest", "Account")">
                        <div class="col">
                            <div class="card radius-10 border-start border-0 border-3 border-info">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h5 class="mb-0">Crear Solicitud de Vacaciones / Permiso</h5>
                                            <p class="mb-0 font-13"> Nueva Solicitud digital&nbsp;</p>
                                        </div>
                                        <div class="widgets-icons-2 rounded-circle bg-success text-white ms-auto">
                                            <i class="fas fa-calendar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    }
                }
            </div>
            <div style="display:none" class="row row-cols-1 row-cols-md-2 row-cols-xl-4 mb-3">
                <a href="@Url.Action("myAction", "myController")">
                    <div class="col">
                        <div class="card radius-10 border-start border-0 border-3 border-info">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0">Crear Solicitud Anticipo Bonificaciones</h5>
                                        <p class="mb-0 font-13">Nueva Solicitud digital&nbsp;</p>
                                    </div>
                                    <div class="widgets-icons-2 rounded-circle bg-red text-white ms-auto">
                                        <i class="fas fa-comment-dollar"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <h4>Mis Solicitudes / Firma Digital</h4>
            <hr />
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">
                <a href="@Url.Action("RequestInvoice", "Account")">
                    <div class="col">
                        <div class="card radius-10 border-start border-0 border-3 border-info">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0">Mis solicitudes Creadas</h5>
                                        <p class="mb-0 font-13">Gestione y controle el estado de sus solicitudes realizadas&nbsp;</p>
                                    </div>
                                    <div class="widgets-icons-2 rounded-circle bg-orange text-white ms-auto">
                                        <i class="fas fa-share"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("createSignDigital", "Account")">
                    <div class="col">
                        <div class="card radius-10 border-start border-0 border-3 border-info">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0">Firma Digital de Empleado</h5>
                                        <p class="mb-0 font-13">Creación de Firma digital para solicitudes&nbsp;</p>
                                    </div>
                                    <div class="widgets-icons-2 rounded-circle bg-info text-white ms-auto">
                                        <i class="fas fa-signature"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="@Url.Action("MailSign", "Account")">
                    <div class="col">
                        <div class="card radius-10 border-start border-0 border-3 border-info">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0">Firma de Correo Eletrónico</h5>
                                        <p class="mb-0 font-13">Creación de Firma de tu correo electrónico&nbsp;</p>
                                    </div>
                                    <div class="widgets-icons-2 rounded-circle bg-success text-white ms-auto">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div style="display:@temp_body_j">
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">
                    <a href="@Url.Action("listInvoice", "Account")">
                        <div class="col">
                            <div class="card radius-10 border-start border-0 border-3 border-info">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h5 class="mb-0">Solicitudes Asignadas</h5>
                                            <p class="mb-0 font-13">Apruebe o desapruebe las solicitudes de sus empleados&nbsp;</p>
                                        </div>
                                        <div class="widgets-icons-2 rounded-circle bg-red text-white ms-auto">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

