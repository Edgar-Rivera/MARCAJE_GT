@{
    ViewBag.Title = "Solicitudes Digitales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F4F6F9 !important;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        border-radius: 12px !important;
        margin-bottom: 1.5rem;
        padding: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: 0;
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 14px 35px rgba(0,0,0,0.12);
        }

    a[href] {
        color: black !important;
        text-decoration: none;
    }

    h4 {
        text-align: center;
    }

    hr {
        margin-left: auto;
        margin-right: auto;
        width: 60%;
    }

    .table-responsive {
        height: 200px;
        overflow: auto;
    }

    thead tr th {
        position: sticky;
        top: 0;
        background-color: #292b2c;
        z-index: 10;
    }
</style>

@{
    string temp_body_j = string.Empty;
    if (Session["code"].ToString() == "36" || Session["code"].ToString() == "5" || Session["code"].ToString() == "4" || Session["code"].ToString() == "233" || Session["code"].ToString() == "311"
        || Session["code"].ToString() == "167" || Session["code"].ToString() == "265" || Session["code"].ToString() == "281" || Session["code"].ToString() == "182" || Session["code"].ToString() == "95"
        || Session["code"].ToString() == "204" || Session["code"].ToString() == "40" || Session["code"].ToString() == "340" || Session["code"].ToString() == "8" || Session["code"].ToString() == "1"
        || Session["code"].ToString() == "300" || Session["code"].ToString() == "201" || Session["code"].ToString() == "270" || Session["code"].ToString() == "13" || Session["code"].ToString() == "89"
        || Session["code"].ToString() == "150" || Session["code"].ToString() == "276" || Session["code"].ToString() == "320" || Session["code"].ToString() == "200"
        || Session["code"].ToString() == "298" || Session["code"].ToString() == "263" || Session["code"].ToString() == "432" || Session["code"].ToString() == "345"
        || Session["code"].ToString() == "278" || Session["code"].ToString() == "317")
    {
        temp_body_j = "block";
    }
    else
    {
        temp_body_j = "none";
    }
}

@{
    string temp_body = string.Empty;
    if (Session["code"].ToString() == "6" || Session["code"].ToString() == "4" || Session["code"].ToString() == "5" || Session["code"].ToString() == "1")
    {
        temp_body = "block";
    }
    else
    {
        temp_body = "none";
    }
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-11 mt-3">

            @if (string.IsNullOrEmpty(ViewBag.source))
            {
                <div class="alert alert-danger text-center" role="alert">
                    <b>No se encuentra una firma registrada!, por favor cree su firma Digital en la opción "Firma Digital de Empleado"</b>
                </div>
            }

            
            <div style="display:@temp_body" class="mb-3">
                <h4>Control y Gestión de Nómina</h4>
                <hr />
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 mb-2 g-3 justify-content-center">

                    <div class="col d-flex">
                        <a href="@Url.Action("VacationsRequest", "Account")" class="w-100">
                            <div class="card h-100">
                                <h5 class="mb-1 text-dark">Solicitud Disfrute de Vacaciones / Permisos</h5>
                                <p class="mb-0 text-muted small">Vacaciones y permisos laborales</p>
                            </div>
                        </a>
                    </div>

                </div>
            </div>

         
            <h4>Formularios de Solicitud</h4>
            <hr />
            <div class="row row-cols-1 row-cols-md-3 row-cols-xl-4 mb-3 justify-content-center">

                @if (!string.IsNullOrEmpty(ViewBag.source))
                {
                    if (Session["code"].ToString() != "265" && Session["code"].ToString() != "311" && Session["code"].ToString() != "182")
                    {
                        <div class="col d-flex">
                            <a href="@Url.Action("VacationsRequest", "Account")" class="w-100">
                                <div class="card h-100">
                                    <h5 class="mb-1 text-dark">Crear Solicitud de Vacaciones / Permiso</h5>
                                    <p class="mb-0 text-muted small">Nueva Solicitud digital</p>
                                </div>
                            </a>
                        </div>
                    }
                }

            </div>

            
            <h4>Mis Solicitudes / Firma Digital</h4>
            <hr />
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3 mb-3 justify-content-center">

                <div class="col d-flex">
                    <a href="@Url.Action("RequestList", "Account")" class="w-100">
                        <div class="card h-100">
                            <h5 class="mb-1 text-dark">Mis solicitudes Creadas</h5>
                            <p class="mb-0 text-muted small">
                                Gestione y controle el estado de sus solicitudes realizadas
                            </p>
                        </div>
                    </a>
                </div>

                <div class="col d-flex">
                    <a href="@Url.Action("createSignDigital", "Account")" class="w-100">
                        <div class="card h-100">
                            <h5 class="mb-1 text-dark">Firma Digital de Empleado</h5>
                            <p class="mb-0 text-muted small">
                                Creación de firma digital para solicitudes
                            </p>
                        </div>
                    </a>
                </div>

                <div class="col d-flex">
                    <a href="@Url.Action("MailSign", "Account")" class="w-100">
                        <div class="card h-100">
                            <h5 class="mb-1 text-dark">Firma de Correo Electrónico</h5>
                            <p class="mb-0 text-muted small">
                                Creación de firma para tu correo electrónico
                            </p>
                        </div>
                    </a>
                </div>

            </div>

            
            <div style="display:@temp_body_j">
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3 justify-content-center">

                    <div class="col d-flex">
                        <a href="@Url.Action("listRequest", "Account")" class="w-100">
                            <div class="card h-100">
                                <h5 class="mb-1 text-dark">Solicitudes Asignadas</h5>
                                <p class="mb-0 text-muted small">
                                    Apruebe o desapruebe las solicitudes de sus empleados
                                </p>
                            </div>
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>