@model purchaseTracking.Models.SiteUser
@{
    ViewBag.Title = "Isertec - Iniciar Sesión";
    Layout = "~/Views/Shared/partialLogin.cshtml";
}
<style>
    .image-logon {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 4px;
    }

    .bg-image-vertical {
        position: relative;
        overflow: hidden;
        background-repeat: no-repeat;
        background-position: right center;
        background-size: auto 100%;
    }

    @@media (min-width: 1025px) {
        .h-custom-2 {
            height: 100%;
        }
    }

    html {
        font-size: 14px !important;
    }
</style>
<section class="vh-100" style="background-image: url(/Content/Images/bg-3-V02.jpg);justify-content: center;background-position:center;background-size:cover">
    <div class="container  h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-6">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-10 col-lg-12 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "container" }))
                                {
                                    string temp = ViewBag.ReturnUrl;
                                    @Html.Hidden("returnUrl", temp);
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <img src="~/Content/Images/iserlogo.png" width="200" height="55" alt="isericon" class="image-logon">
                                    </div>
                                    <h5 class="fw-normal text-center font-weight-bold">Inicie sesión en su cuenta</h5>
                                    <div class="form-outline mb-4">
                                        <label class="form-label font-weight-bold" for="form2Example17">Usuario</label>
                                        @Html.TextBoxFor(model => Model.UserName, new { @class = "form-control form-control", @required = true })
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label font-weight-bold" for="form2Example27">Contraseña</label>
                                        @Html.TextBoxFor(model => Model.Password, new { @class = "form-control form-control", @required = true, @type = "password" })
                                    </div>
                                    <div class="form-row">
                                        @Html.ValidationSummary(true, "")
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-success btn-block" type="submit">Iniciar Sesión</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>